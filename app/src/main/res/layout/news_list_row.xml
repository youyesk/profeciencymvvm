<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="@dimen/padding_16"
    android:paddingLeft="@dimen/padding_16"
    android:paddingRight="@dimen/padding_16"
    android:paddingStart="@dimen/padding_16"
    android:paddingTop="@dimen/padding_8">


    <TextView
        android:id="@+id/tvTitle"
        style="@style/header_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/padding_8"
        android:text="" />

    <TextView
        android:id="@+id/tvContent"
        style="@style/content_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvTitle"
        android:layout_marginBottom="@dimen/padding_8"
        android:layout_marginEnd="@dimen/padding_8"
        android:layout_marginRight="@dimen/padding_8"
        android:layout_marginTop="@dimen/padding_8"
        android:layout_toLeftOf="@+id/ivImage"
        android:layout_toStartOf="@+id/ivImage"
        android:text="" />

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="@dimen/width_height_60"
        android:layout_height="@dimen/width_height_60"
        android:layout_below="@+id/ivNext"
        android:layout_toLeftOf="@+id/ivNext"
        android:layout_toStartOf="@+id/ivNext"
        android:contentDescription="@null"
        app:srcCompat="@android:drawable/ic_menu_gallery" />

    <ImageView
        android:id="@+id/ivNext"
        android:layout_width="@dimen/width_height_20"
        android:layout_height="@dimen/width_height_20"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/padding_8"
        android:contentDescription="@null"
        app:srcCompat="@drawable/right_arrow" />
</RelativeLayout>